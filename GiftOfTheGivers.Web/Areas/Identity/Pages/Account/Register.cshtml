@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <!-- Center the content row and adjust column sizing -->
    <div class="row justify-content-center">

        <!-- Registration Form Column (col-md-5) -->
        <div class="col-md-5">
            <div class="card shadow-lg p-4 mb-4">
                <h1 class="card-title text-center text-primary mb-4">@ViewData["Title"]</h1>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="h5 mb-3 fw-bold">Create a New Account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                    <!-- Row for First Name and Last Name -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="First Name" />
                                <label asp-for="Input.FirstName">First Name</label>
                                <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="Last Name" />
                                <label asp-for="Input.LastName">Last Name</label>
                                <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.IDNumber" class="form-control" autocomplete="idnumber" aria-required="true" placeholder="ID Number" />
                        <label asp-for="Input.IDNumber">ID Number</label>
                        <span asp-validation-for="Input.IDNumber" class="text-danger small"></span>
                    </div>

                    <!-- Row for Date of Birth and Gender -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <!-- FIX: Added type="date" for a proper date picker experience -->
                                <input asp-for="Input.DateOfBirth" type="date" class="form-control" aria-required="true" />
                                <label asp-for="Input.DateOfBirth">Date of Birth</label>
                                <span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="Input.Gender" class="form-control" aria-required="true">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <label asp-for="Input.Gender">Gender</label>
                                <span asp-validation-for="Input.Gender" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="Input.UserType" class="form-control" aria-required="true">
                            <option value="">Select User Type</option>
                            <option value="Donor">Donor</option>
                            <option value="Volunteer">Volunteer</option>
                            <option value="Administrator">Administrator</option>
                        </select>
                        <label asp-for="Input.UserType">User Type</label>
                        <span asp-validation-for="Input.UserType" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <!-- Row for Password and Confirm Password -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Register</button>
                </form>
            </div>
        </div>

        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
