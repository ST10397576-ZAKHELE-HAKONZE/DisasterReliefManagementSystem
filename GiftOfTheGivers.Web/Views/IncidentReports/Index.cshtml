@model IEnumerable<GiftOfTheGivers.Web.Models.IncidentReport>


@{
    ViewData["Title"] = "My Incident Reports";
}

<h1 class="text-center text-primary mb-4">Incident Reports</h1>

<p class="text-center mb-4">
    <a asp-action="Create" class="btn btn-primary btn-lg shadow">Create New Report</a>
</p>

<div class="card shadow-lg p-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr class="table-info">
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Severity)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.Timestamp)</th>
                    <th class="text-primary">Reported By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>
                            <!-- Truncate long description for cleaner table -->
                            @(item.Description != null && item.Description.Length > 40
                                                    ? item.Description.Substring(0, 40) + "..."
                                                    : item.Description)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Severity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@item.Timestamp.ToString("g")</td>
                    <td>
                        @if (item.ReportedByUser != null)
                            {
                                @item.ReportedByUser.Email
                            }
                            else
                            {
                                @:Unknown
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ReportID" class="btn btn-sm btn-outline-info me-2">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ReportID" class="btn btn-sm btn-outline-secondary me-2">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ReportID" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
