@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5">
    <!-- Center the content row and adjust column sizing for a focused look -->
    <div class="row justify-content-center">

        <!-- Local Login Column -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg p-4 h-100">
                <h1 class="card-title text-center text-primary mb-4">@ViewData["Title"]</h1>
                <section>
                    <form id="account" method="post">
                        <h2 class="h5 mb-3 fw-bold">Use a local account to log in.</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <!-- Email Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-check mb-3">
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Login Button -->
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>

                        <!-- Supplementary Links -->
                        <div class="mt-3 text-center">
                            <p class="mb-1">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                            </p>
                            <p class="mb-1">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none small text-muted">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>

       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
