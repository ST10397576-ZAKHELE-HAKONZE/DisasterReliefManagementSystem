@model GiftOfTheGivers.Web.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<h1>Edit</h1>

<h4>Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DonationID" />

            <!-- DONATION TYPE DROPDOWN (UPDATED) -->
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <!-- Binds the current enum value to the dropdown -->
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.DonationType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateReceived" class="control-label"></label>
                <input asp-for="DateReceived" class="form-control" />
                <span asp-validation-for="DateReceived" class="text-danger"></span>
            </div>

            <!-- DONATION STATUS DROPDOWN (UPDATED) -->
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <!-- Binds the current enum value to the dropdown -->
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.DonationStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- DONOR ID DROPDOWN (Using ViewData from Controller) -->
            <div class="form-group">
                <label asp-for="DonorID" class="control-label"></label>
                <select asp-for="DonorID" class="form-control" asp-items="ViewBag.DonorID"></select>
                <span asp-validation-for="DonorID" class="text-danger"></span>
            </div>

            <!-- RECORDED BY USER ID DROPDOWN (Using ViewData from Controller) -->
            <div class="form-group">
                <label asp-for="RecordedByUserId" class="control-label"></label>
                <select asp-for="RecordedByUserId" class="form-control" asp-items="ViewBag.RecordedByUserId"></select>
                <span asp-validation-for="RecordedByUserId" class="text-danger"></span>
            </div>

            <!-- RELIEF PROJECT ID DROPDOWN (Using ViewData from Controller) -->
            <div class="form-group">
                <label asp-for="ReliefProjectProjectID" class="control-label"></label>
                <select asp-for="ReliefProjectProjectID" class="form-control" asp-items="ViewBag.ReliefProjectProjectID">
                    <option value="">-- Select Relief Project (Optional) --</option>
                </select>
                <span asp-validation-for="ReliefProjectProjectID" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
