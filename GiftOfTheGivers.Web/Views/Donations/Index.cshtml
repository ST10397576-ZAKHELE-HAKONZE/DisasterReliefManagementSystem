@model IEnumerable<GiftOfTheGivers.Web.Models.Donation>

@{
    ViewData["Title"] = "All Donations";
}

<h1 class="text-center text-success mb-4">Donation Records</h1>

<!-- UI access control: Only show the Create button if the user is an Administrator -->
@if (User.IsInRole("Administrator"))
{
    <p class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg shadow">Record New Donation</a>
    </p>
}
else
{
    <!-- Optional: Display a message for non-admins -->
    <p class="text-center text-muted mb-4">
        Only Administrators can record new donations.
    </p>
}

<div class="card shadow-lg p-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr class="table-success">
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateReceived)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th class="text-success">
                        @Html.DisplayNameFor(model => model.Donor)
                    </th>
                    <th class="text-success">
                        @Html.DisplayNameFor(model => model.RecordedByUser)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            <!-- Truncate description for cleaner list view -->
                            @(item.Description.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)
                        </td>
                        <!-- Date Formatting -->
                        <td>
                            @item.DateReceived.ToString("d")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <!-- Display Donor Contact Number -->
                        <td>
                            @Html.DisplayFor(modelItem => item.Donor!.ContactNumber)
                        </td>
                        <!-- Display Recording User Email (assuming 'Id' holds the email or a meaningful identifier) -->
                        <td>
                            @Html.DisplayFor(modelItem => item.RecordedByUser!.Email)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.DonationID" class="btn btn-sm btn-outline-secondary">Details</a>
                            <!-- UI access control for Edit/Delete: Only visible to Administrators -->
                            @if (User.IsInRole("Administrator"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.DonationID" class="btn btn-sm btn-outline-success">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.DonationID" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
