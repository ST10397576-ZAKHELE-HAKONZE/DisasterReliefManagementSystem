@model GiftOfTheGivers.Web.Models.IncidentReport

@{
    ViewData["Title"] = "Delete Incident Report";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="alert alert-danger shadow-lg mb-5" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion
                </h4>
                <p>
                    You are about to permanently delete **Incident Report #@Model.ReportID** titled: <strong>@Model.Title</strong>.
                    This action **cannot be undone**.
                </p>
                <hr>
                <p class="mb-0">
                    Please review the details below before proceeding.
                </p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Incident Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Title)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4">Reported By</dt>
                        <dd class="col-sm-8">@(Model.ReportedByUser?.Email ?? "System")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Timestamp)</dt>
                        <dd class="col-sm-8">@Model.Timestamp.ToString("f")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Severity)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Severity)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ReportID" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-x-circle-fill me-1"></i> Cancel & Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-1"></i> Confirm Deletion
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>