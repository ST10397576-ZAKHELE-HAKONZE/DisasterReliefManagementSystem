@model ReliefProject

@{
    ViewData["Title"] = "Edit Project";
}

@using GiftOfTheGivers.Web.Models

<h1 class="text-center text-primary mb-4">Edit Relief Project: @Model.Title</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg p-4 mb-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <!-- Hidden field for ProjectID is crucial for editing -->
                <input type="hidden" asp-for="ProjectID" />

                <!-- Project Details -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold text-secondary"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Location" class="form-label fw-bold text-secondary"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold text-secondary"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <!-- Status & Coordinator -->
                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold text-secondary"></label>
                    <!-- Using ProjectStatus for dropdown list -->
                    @Html.DropDownListFor(model => model.Status, Html.GetEnumSelectList<ProjectStatus>(), new { @class = "form-select" })
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CoordinatorId" class="form-label fw-bold text-secondary"></label>
                    <select asp-for="CoordinatorId" class="form-select" asp-items="ViewBag.CoordinatorId"></select>
                    <span asp-validation-for="CoordinatorId" class="text-danger"></span>
                </div>

                <!-- Date Fields -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label fw-bold text-secondary"></label>
                        <!-- Ensuring date input type and proper formatting for model binding -->
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold text-secondary"></label>
                        <!-- Ensuring date input type and proper formatting for model binding -->
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Action Button -->
                <div class="d-grid mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-success btn-lg shadow" />
                </div>
            </form>
        </div>
        
        <!-- Back to List Link -->
        <div class="text-center">
            <a asp-action="Index" class="btn btn-link text-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
