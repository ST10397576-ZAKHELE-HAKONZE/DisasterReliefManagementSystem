@model IEnumerable<ReliefProject>

@{
    ViewData["Title"] = "All Relief Projects";
}

<h1 class="text-center text-primary mb-4">Relief Projects</h1>

<!-- UI access control: Only show the Create button if the user is an Administrator -->
@if (User.IsInRole("Administrator"))
{
    <p class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary btn-lg shadow">Create New Project</a>
    </p>
}
else
{
    <!-- Optional: Display a message for non-admins -->
    <p class="text-center text-muted mb-4">
        Only Administrators can create new relief projects.
    </p>
}

<div class="card shadow-lg p-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr class="table-info">
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                    <th class="text-primary">@Html.DisplayNameFor(model => model.Coordinator)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>
                            <!-- Truncate long description for cleaner table -->
                            @(item.Description != null && item.Description.Length > 40
                                                    ? item.Description.Substring(0, 40) + "..."
                                                    : item.Description)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@item.StartDate.ToString("d")</td>
                    <td>@(item.EndDate.HasValue? item.EndDate.Value.ToString("d") : "-")</td>
                    <td>
                        @if (item.Coordinator != null)
                            {
                                @item.Coordinator.Email
                            }
                            else
                            {
                                @:No Coordinator
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ProjectID" class="btn btn-sm btn-outline-secondary me-2">Details</a>
                            
                            @if (User.IsInRole("Administrator"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.ProjectID" class="btn btn-sm btn-outline-info me-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.ProjectID" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
