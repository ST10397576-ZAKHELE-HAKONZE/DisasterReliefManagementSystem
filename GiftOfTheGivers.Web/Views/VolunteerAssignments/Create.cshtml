@model GiftOfTheGivers.Web.Models.VolunteerAssignment

@{
    ViewData["Title"] = "Create Volunteer Assignment";
}

<h1 class="text-center text-primary mb-4">Create New Volunteer Assignment</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Role/Task Enum Dropdown -->
                <div class="form-group mb-3">
                    <label asp-for="Role" class="control-label text-info"></label>
                    <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.VolunteerRole>()">
                        <option value="">-- Select Role/Task --</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Status Enum Dropdown -->
                <div class="form-group mb-4">
                    <label asp-for="Status" class="control-label text-info"></label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.AssignmentStatus>()">
                        <option value="">-- Select Assignment Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Volunteer User Dropdown (UserId) -->
                <div class="form-group mb-3">
                    <label asp-for="UserId" class="control-label text-info"></label>
                    <!-- Uses ViewBag.UserId from the Controller (list of user emails) -->
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                        <option value="">-- Select Volunteer User (Email) --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- Project Dropdown (ProjectID) -->
                <div class="form-group mb-3">
                    <label asp-for="ProjectID" class="control-label text-info"></label>
                    <!-- Uses ViewBag.ProjectID from the Controller (list of project titles) -->
                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID">
                        <option value="">-- Select Relief Project (Title) --</option>
                    </select>
                    <span asp-validation-for="ProjectID" class="text-danger"></span>
                </div>

                <!-- Assigned Date (Optional: Can be set automatically in the Controller, but included here if manual entry is desired) -->
                <div class="form-group mb-4">
                    <label asp-for="AssignedDate" class="control-label text-info"></label>
                    <input asp-for="AssignedDate" class="form-control" />
                    <span asp-validation-for="AssignedDate" class="text-danger"></span>
                </div>

                <div class="form-group d-grid gap-2">
                    <input type="submit" value="Create Assignment" class="btn btn-primary btn-lg" />
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="text-decoration-none">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
