@using GiftOfTheGivers.Web.Models.Enums
@model GiftOfTheGivers.Web.Models.ViewModels.IncidentReportEditViewModel

@{
    ViewData["Title"] = "Edit Incident Report";
}

<h1 class="text-center text-info mb-4">Edit Incident Report</h1>
<hr class="text-info" />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden ID field -->
                <input type="hidden" asp-for="ReportID" />

                <!-- READ-ONLY DETAILS CARD -->
                <div class="border border-info rounded mb-4 p-3 bg-light">
                    <h5 class="text-info mb-3"><i class="bi bi-info-circle-fill me-1"></i> Report Details (Read-Only)</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold text-muted">Title:</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Reported By:</dt>
                        <dd class="col-sm-8">@Model.ReporterEmail</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Submitted On:</dt>
                        <dd class="col-sm-8">
                            @Model.Timestamp.ToString("f") <!-- Full date + time -->
                        </dd>
                    </dl>
                </div>

                <!-- EDITABLE FIELDS -->
                <!-- Status Dropdown -->
                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label text-info"></label>
                    <select asp-for="Status"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<IncidentStatus>()">
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Severity Dropdown -->
                <div class="form-group mb-3">
                    <label asp-for="Severity" class="control-label text-info"></label>
                    <select asp-for="Severity"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<IncidentSeverity>()">
                    </select>
                    <span asp-validation-for="Severity" class="text-danger"></span>
                </div>

                <!-- Description (Admin Notes) -->
                <div class="form-group mb-4">
                    <label asp-for="Description" class="control-label text-info"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Add admin notes or update description..."></textarea>
                    <small class="form-text text-muted">
                        Original report is preserved above. This field allows updates for tracking.
                    </small>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group d-grid gap-2">
                    <button type="submit" class="btn btn-info btn-lg">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>

            <!-- Back & Details Links -->
            <div class="mt-3 text-center">
                <a asp-action="Index" class="text-decoration-none">Back to Dashboard</a> |
                <a asp-action="Details" asp-route-id="@Model.ReportID" class="text-decoration-none">View Details</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}