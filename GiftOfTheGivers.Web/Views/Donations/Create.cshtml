@model GiftOfTheGivers.Web.Models.Donation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <!-- Html.GetEnumSelectList automatically generates select options from the DonationType enum -->
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.DonationType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReceived" class="control-label"></label>
                <input asp-for="DateReceived" class="form-control" />
                <span asp-validation-for="DateReceived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <!-- Html.GetEnumSelectList automatically generates select options from the DonationStatus enum -->
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.DonationStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonorID" class="control-label"></label>
                <select asp-for="DonorID" class ="form-control" asp-items="ViewBag.DonorID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RecordedByUserId" class="control-label"></label>
                <select asp-for="RecordedByUserId" class ="form-control" asp-items="ViewBag.RecordedByUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReliefProjectProjectID" class="control-label"></label>
                <select asp-for="ReliefProjectProjectID" class="form-control" asp-items="ViewBag.ReliefProjectProjectID">
                    <option value="">-- Select Relief Project (Optional) --</option>
                </select>
                <span asp-validation-for="ReliefProjectProjectID" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
