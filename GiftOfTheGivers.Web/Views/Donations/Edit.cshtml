@model GiftOfTheGivers.Web.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<h1 class="text-center text-success mb-4">Edit Donation Record</h1>
<hr class="text-success" />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden ID field is crucial for Edit operation -->
                <input type="hidden" asp-for="DonationID" />

                <!-- DONATION TYPE DROPDOWN -->
                <div class="form-group mb-3">
                    <label asp-for="Type" class="control-label text-success"></label>
                    <!-- Binds the current enum value to the dropdown -->
                    <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.DonationType>()"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <!-- Amount Input -->
                <div class="form-group mb-3">
                    <label asp-for="Amount" class="control-label text-success"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <!-- Description Input -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label text-success"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Date Received Input -->
                <div class="form-group mb-3">
                    <label asp-for="DateReceived" class="control-label text-success"></label>
                    <input asp-for="DateReceived" class="form-control" />
                    <span asp-validation-for="DateReceived" class="text-danger"></span>
                </div>

                <!-- DONATION STATUS DROPDOWN -->
                <div class="form-group mb-4">
                    <label asp-for="Status" class="control-label text-success"></label>
                    <!-- Binds the current enum value to the dropdown -->
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<GiftOfTheGivers.Web.Models.DonationStatus>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- DONOR ID DROPDOWN (Using ViewBag) -->
                <div class="form-group mb-3">
                    <label asp-for="DonorID" class="control-label text-success"></label>
                    <select asp-for="DonorID" class="form-control" asp-items="ViewBag.DonorID"></select>
                    <span asp-validation-for="DonorID" class="text-danger"></span>
                </div>

                <!-- RECORDED BY USER ID DROPDOWN (Using ViewBag) -->
                <div class="form-group mb-3">
                    <label asp-for="RecordedByUserId" class="control-label text-success"></label>
                    <select asp-for="RecordedByUserId" class="form-control" asp-items="ViewBag.RecordedByUserId"></select>
                    <span asp-validation-for="RecordedByUserId" class="text-danger"></span>
                </div>

                <!-- RELIEF PROJECT ID DROPDOWN (Using ViewBag) -->
                <div class="form-group mb-4">
                    <label asp-for="ReliefProjectProjectID" class="control-label text-success"></label>
                    <select asp-for="ReliefProjectProjectID" class="form-control" asp-items="ViewBag.ReliefProjectProjectID">
                        <!-- Note: The selected option will be automatically bound by the framework -->
                        <option value="">-- Select Relief Project (Optional) --</option>
                    </select>
                    <span asp-validation-for="ReliefProjectProjectID" class="text-danger"></span>
                </div>

                <div class="form-group d-grid gap-2">
                    <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="text-decoration-none">Back to List</a> |
                <a asp-action="Details" asp-route-id="@Model.DonationID" class="text-decoration-none">View Details</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
