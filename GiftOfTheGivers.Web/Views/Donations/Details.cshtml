@model GiftOfTheGivers.Web.Models.Donation

@{
    ViewData["Title"] = "Donation Details";
}

<h1 class="text-center text-success mb-4">Donation Details</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-lg p-4">
            <div class="card-body">
                <h4 class="card-title text-success mb-3">Record Information</h4>
                <hr class="text-success" />

                <dl class="row">
                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Type)
                    </dd>

                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>

                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.DateReceived)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DateReceived)
                    </dd>

                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>

                <h4 class="text-success mt-4 mb-3">Related Parties</h4>
                <hr class="text-success" />

                <dl class="row">
                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.Donor)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Donor!.ContactNumber)
                    </dd>

                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.RecordedByUser)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.RecordedByUser!.Email)
                    </dd>

                    <!-- Display Relief Project link if available -->
                    <dt class="col-sm-4 text-success">
                        @Html.DisplayNameFor(model => model.ReliefProject)
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.ReliefProject != null)
                        {
                            <a asp-controller="ReliefProjects" asp-action="Details" asp-route-id="@Model.ReliefProject.ProjectID">@Html.DisplayFor(model => model.ReliefProject.Title)</a>
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="mt-4 text-center">
                <a asp-action="Edit" asp-route-id="@Model.DonationID" class="btn btn-warning shadow me-3">Edit</a>
                <a asp-action="Index" class="btn btn-secondary shadow">Back to List</a>
            </div>
        </div>
    </div>
</div>
