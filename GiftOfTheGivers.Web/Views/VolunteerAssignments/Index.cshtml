@model IEnumerable<GiftOfTheGivers.Web.Models.VolunteerAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                <!-- FIX: Display the User's Email instead of the UserID -->
                <td>
                    @Html.DisplayFor(modelItem => item.User!.Email)
                </td>
                <!-- FIX: Display the Project's Title instead of the ProjectID -->
                <td>
                    @Html.DisplayFor(modelItem => item.Project!.Title)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssignmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AssignmentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
